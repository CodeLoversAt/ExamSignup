{% extends "CodeLoversExamSignupBundle::layout.html.twig" %}

{% block content %}
    {% spaceless %}
        <div class="page-header">
            <h1>
                {{ 'user.delete.title'|trans({'%user%': user ~ ' (' ~ user.email ~ ')'})|desc('Delete user "%user%"') }}
            </h1>
        </div>

        {{ form_start(form) }}
        <div class="form-group">
            <div class="col-md-10 col-md-offset-2">
                <label class="checkbox" for="{{ form.confirm.vars.id }}">
                    {{ form_widget(form.confirm) }}
                    {{ form.confirm.vars.label|trans }}
                </label>
                {{ form_errors(form.confirm) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10 col-md-offset-2">
                <button type="submit" class="btn btn-danger btn-lg">{{ 'form.delete'|trans|desc('Delete') }}</button>
            </div>
        </div>
        {{ form_end(form) }}
    {% endspaceless %}
{% endblock content %}
