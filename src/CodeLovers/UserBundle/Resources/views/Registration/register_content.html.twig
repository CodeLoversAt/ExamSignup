{% spaceless %}
    {% trans_default_domain 'FOSUserBundle' %}

    <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal form-signup">
        <div class="form-group">
            {{ form_label(form.email, null, {'label_attr': {'class': 'col-md-3'}}) }}

            <div class="col-md-9">
                {{ form_widget(form.email) }}
                {{ form_errors(form.email) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.username, null, {'label_attr': {'class': 'col-md-3'}}) }}

            <div class="col-md-9">
                {{ form_widget(form.username) }}
                {{ form_errors(form.username) }}
            </div>
        </div>

        {% for widget in form.plainPassword %}
        <div class="form-group">
            {{ form_label(widget, null, {'label_attr': {'class': 'col-md-3'}}) }}

            <div class="col-md-9">
                {{ form_widget(widget) }}
            </div>
        </div>
        {% endfor %}
        <div class="col-md-9 col-md-offset-3">
            {{ form_errors(form.plainPassword) }}
            {{ form_errors(form.plainPassword.first) }}
            {{ form_errors(form.plainPassword.second) }}
        </div>

        <div class="form-group">
            {{ form_label(form.firstName, null, {'label_attr': {'class': 'col-md-3'}}) }}

            <div class="col-md-9">
                {{ form_widget(form.firstName) }}
                {{ form_errors(form.firstName) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.lastName, null, {'label_attr': {'class': 'col-md-3'}}) }}

            <div class="col-md-9">
                {{ form_widget(form.lastName) }}
                {{ form_errors(form.lastName) }}
            </div>
        </div>

        {{ form_rest(form) }}
        <div class="form-group">
            <div class="col-md-9 col-md-offset-3">
                <button type="submit" class="btn btn-primary btn-lg">{{ 'registration.submit'|trans }}</button>
            </div>
        </div>
    </form>
{% endspaceless %}