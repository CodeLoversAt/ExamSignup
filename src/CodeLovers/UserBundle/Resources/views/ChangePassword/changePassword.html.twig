{% spaceless %}
    {% trans_default_domain 'FOSUserBundle' %}

    <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal form-ajax">
    <div class="panel panel-default">
        <div class="panel-heading clearfix">
            <h3 class="panel-title pull-left"><a href="#change-password-content" data-toggle="collapse">{{ 'change_password.submit'|trans|desc('Change password') }}</a></h3>
            <a href="#change-password-content" data-toggle="collapse" class="btn btn-default pull-right btn-xs"><i class="icon-collapse"></i></a>
        </div>
        <div class="panel-collapse collapse" id="change-password-content">
            <div class="panel-body">
                <div class="form-group">
                    {{ form_label(form.current_password, null, {'label_attr': {'class': 'col-md-6'}}) }}

                    <div class="col-md-6">
                        {{ form_widget(form.current_password) }}
                        {{ form_errors(form.current_password) }}
                    </div>
                </div>

                {% for element in form.plainPassword %}
                    <div class="form-group">
                        {{ form_label(element, null, {'label_attr': {'class': 'col-md-6'}}) }}

                        <div class="col-md-6">
                            {{ form_widget(element) }}
                            {{ form_errors(element) }}
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="panel-footer clearfix">
                <button class="btn btn-primary pull-right" type="submit">{{ 'change_password.submit'|trans|desc('Change password') }}</button>
            </div>
        </div>
    </div>
        {{ form_rest(form) }}
    </form>
{% endspaceless %}